{
    "files.exclude": {
        "**/._*": true,
        "**/.*": true
    },
    "highlight.regexes": {
        "(.*)(FPGASettings.DEBUG)(.*)": [ // A regex will be created from this string, don't forget to double escape it
        { "color": "#5e6559" }, // Decoration options to apply to the first capturing group, in this case "//TODO"
        { "color": "#5e6559" }, // Decoration options to apply to the first capturing group, in this case "//TODO"
        { "color": "#5e6559" } // Decoration options to apply to the second capturing group, in this case ":"
        ]

    },
    "favorites.resources": [
        {
            "filePath": "generators/chipyard/src/main/scala",
            "group": "Default"
        },
        {
            "filePath": "sims/verilator",
            "group": "Default"
        },
        {
            "filePath": "tests",
            "group": "Default"
        },
        {
            "filePath": "generators/fpga/src/main/scala/FPGA.scala",
            "group": "Default"
        },
        {
            "filePath": "generators/fpga/src/main/resources/vsrc",
            "group": "Default"
        },
        {
            "filePath": "generators/fpga/c_files",
            "group": "Default"
        }
    ],
    "files.associations": {
        "*.sbt": "scala",
        "*.ys": "tcl"
    },
    "terminal.integrated.defaultProfile.osx": "zsh",
    "C_Cpp.default.includePath": [
        //"${workspaceFolder}/.conda-env/riscv-tools/riscv64-unknown-elf/include/",
        "${workspaceFolder}/tests"
    ],
    //"C_Cpp.errorSquiggles": "disabled",
    "C_Cpp.autoAddFileAssociations": false,
    "C_Cpp.default.compilerPath": ".conda-env/riscv-tools/bin/riscv64-unknown-elf-gcc",
    "python.envFile": "${workspaceFolder}/env.sh"
}